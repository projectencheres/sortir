{% extends 'base.html.twig' %}

{% block title %}Liste des Sorties{% endblock %}

{% block body %}
<div class="container mt-5">
    {# <h1 class="mb-4">Liste des Sorties</h1> #}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Liste des Sorties</h1>
        <a href="{{ path('admin_sortir_create') }}" class="btn btn-success">Créer une sortie</a>
    </div>
    <div class="row">
        {% for sortie in sorties %}
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">{{ sortie.nom }}</h5>
                        <p class="card-text">
                            <strong>Date de début:</strong> {{ sortie.dateHeureDebut|date('d/m/Y H:i') }}<br>
                            <strong>Lieu:</strong> {{ sortie.lieu.nom ?? 'Non défini' }}<br>
                            <strong>État:</strong> {{ sortie.etat }}<br>
                            <strong>Nombre d'inscrits:</strong> {{ sortie.participants|length }} / {{ sortie.nbInscriptionsMax }}
                        </p>
                        <div class="d-flex justify-content-between flex-wrap">
                            <a href="#" class="btn btn-primary mb-2">S'inscrire</a>
                            <a href="#" class="btn btn-secondary mb-2">Voir détails</a>
                            <a href="#" class="btn btn-warning mb-2">Modifier</a>
                            <a href="#" class="btn btn-danger mb-2">Annuler</a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-warning">
                    Aucune sortie n'est disponible pour le moment.
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
