{% extends 'base.html.twig' %}

{% block title %} Welcome {{ participantForm.pseudo }}{% endblock %}

{% block body %}
    <h4>Mon profil</h4>

    {% if app.flashes('success') %}
        <div class="alert alert-success">
            {% for message in app.flashes('success') %}
                <p>{{ message }}</p>
            {% endfor %}
        </div>
    {% endif %}

    {{ form_start(participantForm, {'attr': {'enctype': 'multipart/form-data'}}) }}
        {{ form_row(participantForm.pseudo) }}
        {{ form_row(participantForm.prenom) }}
        {{ form_row(participantForm.nom) }}
        {{ form_row(participantForm.telephone) }}
        {{ form_row(participantForm.email) }}
        {{ form_row(participantForm.password) }}
        {{ form_row(participantForm.plainPassword) }}
        {{ form_row(participantForm.site) }}
        {{ form_row(participantForm.photo) }}
        <button class="btn btn-sm btn-primary">Enregistrer</button>
    {{ form_end(participantForm) }}

{% endblock %}